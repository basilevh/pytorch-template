    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "train_dbg",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train.py",
            "env": {
              "CUDA_VISIBLE_DEVICES": "0,1",
            },
            "args": [
                "--name",
                "d2",
                "--data_path",
                "/data/ImageNet-1k-ILSVRC/Data/CLS-LOC/",
                "--num_workers",
                "12",
                "--batch_size",
                "8",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/",
            "justMyCode": true,
        },
        {
            "name": "test_dbg",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test.py",
            "args": [
                "--resume",
                "d1",
                "--name",
                "dt1",
                "--gpu_id",
                "0",
                "--num_workers",
                "8",
                "--batch_size",
                "8",
                "--data_path",
                "/data/ImageNet-1k-ILSVRC/Data/CLS-LOC/test/",
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/",
            "justMyCode": true,
        },
    ],
